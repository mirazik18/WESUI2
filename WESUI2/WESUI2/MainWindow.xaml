        <Grid Margin="0,0,0,2" >
            <TextBlock Text="Вход/Регистрация:" Foreground="NavajoWhite" FontSize="20" Margin="299,45,269,314"/>
            <TextBlock Text="Email:" Foreground="NavajoWhite" FontSize="20" Margin="299,149,352,210"/>
            <TextBlock Text="Password:" Foreground="NavajoWhite" FontSize="20" Margin="264,176,387,183"/>
            <TextBox Background="White" TextChanged="TextBox_TextChanged" Foreground="Black" Margin="357,149,261,208"/>
            <TextBox Background="White" TextChanged="TextBox_TextChanged" Foreground="Black" Margin="357,176,261,181"/>
            <Button Content="Войти" Margin="299,249,294,98" Click="Button_Click"/>
